---
import { Image } from "astro:assets";

interface Props {
  heading: string;
  description: string;
  image: ImageMetadata;
  ctaText: string;
}

const { heading, description, image, ctaText } = Astro.props;
---

<main class="flex flex-col-reverse md:flex-row">
  <div class="flex flex-col gap-8">
    <h1 class="font-bold text-4xl text-slate-800">{heading}</h1>
    <p class="text-lg text-slate-600">{description}</p>
    <a>{ctaText}</a>
  </div>
  <Image src={image} alt="Hero image" />
</main>
